<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <application
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.Test3"
            tools:targetApi="31">

        <!-- Main Menu Activity as Launcher -->
        <activity
                android:name=".MainMenu"
                android:exported="true"
                android:label="@string/app_name"
                android:theme="@style/Theme.Test3">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Quest Activity -->
        <activity
                android:name=".QuestActivity"
                android:exported="false"
                android:label="@string/title_activity_quest"
                android:theme="@style/Theme.Test3" />

        <!-- World Map Activity -->
        <activity
                android:name=".activity_world_map"
                android:exported="false"
                android:label="@string/title_activity_world_map"
                android:theme="@style/Theme.Test3" />

        <!-- Bag Activity -->
        <activity
                android:name=".BagActivity"
                android:exported="false"
                android:label="@string/title_activity_bag"
                android:theme="@style/Theme.Test3" />

        <!-- Main Activity (no longer launcher) -->
        <activity
                android:name=".MainActivity"
                android:exported="false"
                android:theme="@style/Theme.Test3" />
    </application>
</manifest>
