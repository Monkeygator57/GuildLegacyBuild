<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

    <!-- Top Bar: Player Info -->
    <TextView
            android:id="@+id/player_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player: New Player (Lvl 1)"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/resources"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gold: 0 | Gems: 0"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Central Area: Map Placeholder and Begin Button -->
    <Button
            android:id="@+id/begin_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Begin"
            app:layout_constraintTop_toBottomOf="@+id/player_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp" />

    <!-- Side Menus: Placeholder Buttons -->
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/begin_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp">

        <Button
                android:id="@+id/events_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Events" />

        <Button
                android:id="@+id/newbie_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Newbie" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/begin_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp">

        <Button
                android:id="@+id/quests_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quests" />

        <Button
                android:id="@+id/bag_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bag" />
    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp">

        <Button
                android:id="@+id/world_map_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="World Map" />

        <Button
                android:id="@+id/campaign_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Campaign" />

        <Button
                android:id="@+id/heroes_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heroes" />

        <Button
                android:id="@+id/guild_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guild" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
